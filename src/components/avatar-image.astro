---
import { avatar, title } from '@constant'
import { Image } from 'astro:assets'

interface Props {
  width?: number
}

const { width } = Astro.props
---

<Image
  src={avatar}
  loading="eager"
  alt={`Avatar of ${title}`}
  class="hover:animate-jump my-5 aspect-square cursor-pointer select-none transition-all duration-150 ease-in"
  width={width ?? 100}
/>
