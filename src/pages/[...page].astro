---
import { description, title } from '@constant'
import type { Page, PaginateFunction } from 'astro'

import NavHeader from '@components/nav-header.astro'
import PagefindSearch from '@components/pagefind-search.astro'
import Pagination from '@components/pagination.astro'
import PostList from '@components/post-list.astro'
import BaseLayout from '@layouts/base-layout.astro'
import { getAllPosts } from '@utils/all-posts'

interface Props {
  page: Page
}

export const getStaticPaths = async ({ paginate }: { paginate: PaginateFunction }) => {
  const blogs = await getAllPosts()

  return paginate(blogs, { pageSize: 8 })
}

const { page } = Astro.props
---

<BaseLayout title={title} description={description}>
  <NavHeader />
  <main class="min-h-[100dvh]">
    <section class="flex flex-col justify-between overflow-hidden">
      <PagefindSearch />
    </section>
    <section class="p-5">
      <PostList posts={page.data} />
    </section>
    <section class="flex items-center justify-end gap-4 py-5 max-[768px]:justify-center">
      <Pagination page={page} />
    </section>
  </main>
</BaseLayout>
